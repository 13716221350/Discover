<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- popupWindow的动画式样 -->
    <style name="AnimationFadeLT">
        <item name="android:windowEnterAnimation">@anim/fade_in_lt</item>
        <item name="android:windowExitAnimation">@anim/fade_out_rb</item>
    </style>
    <style name="AnimationFadeRT">
        <item name="android:windowEnterAnimation">@anim/fade_in_rt</item>
        <item name="android:windowExitAnimation">@anim/fade_out_lb</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
